{
  "name": "partner-reference-application-mtx",
  "dependencies": {
    "@cap-js/hana": "^1.6.1",
    "@sap/cds": "^8.7.1",
    "@sap/cds-mtxs": "^2.5.1",
    "@sap/xssec": "^4.3.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.8.0"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "profile": "mtx-sidecar",
    "requires": {
      "auth": "xsuaa",
      "destinations": true,
      "audit-log": true,
      "html5-host": {
        "vcap": {
          "label": "html5-apps-repo",
          "plan": "app-host"
        },
        "subscriptionDependency": {
          "uaa": "xsappname"
        }
      },
      "poetry-slams-print-service": {
        "vcap": {
          "label": "print"
        },
        "subscriptionDependency": {
          "uaa": "xsappname"
        }
      },
      "cds.xt.ExtensibilityService": {
        "element-prefix": [
          "x_"
        ],
        "namespace-blocklist": [],
        "extension-allowlist": [
          {
            "for": [
              "sap.samples.poetryslams.PoetrySlams"
            ],
            "kind": "entity"
          },
          {
            "for": [
              "sap.samples.poetryslams.Visitors"
            ],
            "kind": "entity"
          },
          {
            "for": [
              "PoetrySlamService"
            ],
            "kind": "service"
          }
        ]
      }
    }
  }
}

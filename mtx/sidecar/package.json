{
  "name": "partner-reference-application-mtx",
  "dependencies": {
    "@cap-js/hana": "^2.1.1",
    "@sap/cds": "^9.1.0",
    "@sap/cds-mtxs": "^3.1.0",
    "@sap/xssec": "^4.9.0",
    "express": "^4.21.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "2.0.2"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "features": {
      "assert_integrity": "db"
    },
    "profile": "mtx-sidecar",
    "requires": {
      "auth": "xsuaa",
      "destinations": true,
      "connectivity": true,
      "audit-log": true,
      "html5-host": {
        "vcap": {
          "label": "html5-apps-repo",
          "plan": "app-host"
        },
        "subscriptionDependency": {
          "uaa": "xsappname"
        }
      },
      "poetry-slams-print-service": {
        "vcap": {
          "label": "print"
        },
        "subscriptionDependency": {
          "uaa": "xsappname"
        }
      },
      "poetry-slams-jobscheduler": {
        "vcap": {
          "label": "jobscheduler"
        },
        "subscriptionDependency": {
          "uaa": "xsappname"
        }
      },
      "cds.xt.ExtensibilityService": {
        "element-prefix": [
          "x_"
        ],
        "namespace-blocklist": [],
        "extension-allowlist": [
          {
            "for": [
              "sap.samples.poetryslams.PoetrySlams",
              "PoetrySlamService.PoetrySlams"
            ],
            "kind": "entity",
            "annotations": [
              "@assert.integrity"
            ]
          },
          {
            "for": [
              "sap.samples.poetryslams.Visitors"
            ],
            "kind": "entity"
          },
          {
            "for": [
              "PoetrySlamService"
            ],
            "kind": "service"
          }
        ]
      }
    }
  }
}
